@model MK.Easydoc.WebApp.ViewModels.LoginViewModel
 
@{
    ViewBag.Title = "Login";
}


<div id="AlertaLogin" class="ls-alert-box-info ls-no-list-style ls-dismissable" role="alert" data-target="#AlertaLogin" style="margin:10px;">
    <p>
        @Html.ValidationSummary(false)
    </p>
</div>

<div class="login-page">
    <div class="login-box">
        <div class="login-box-body">
            <div class="login-logo">
                <a href="#"><img src="~/Assets/image/MULTI_EASYDOC_290x128.png" alt="Logotipo MultiArkivos - EasyDoc" class="img-responsive center-block" /></a>
            </div><!-- /.login-logo -->

            @using (Html.BeginForm("Autenticar", "Login", FormMethod.Post, new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                @TempData["SendResult"]
                @Html.AntiForgeryToken()

                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.NomeUsuario, htmlAttributes: new { @class = "form-control", placeholder = "Usuário" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    @Html.PasswordFor(m => m.Senha, htmlAttributes: new { @class = "form-control", placeholder = "Senha" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <label>
                                    @Html.CheckBoxFor(m => m.ManterConectado) Relembre-me
                                </label>
                                @*@Html.CheckBoxFor(m => m.ManterConectado)
                                @Html.LabelFor(m => m.ManterConectado, new { @class = "checkbox" })*@
                            </label>
                        </div>
                    </div><!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" value="Acessar" class="btn btn-primary btn-block btn-flat">Acessar</button>
                    </div><!-- /.col -->
                </div>

                }

                @*<a href="#">Esqueci minha senha</a><br>
            <a href="register.html" class="text-center">Novo usuario</a>*@

            </div><!-- /.login-box-body -->
    </div>
</div>
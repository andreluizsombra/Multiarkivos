@{
    ViewBag.Title = "Trocar Senha";
    //TempData["Error"] = ViewBag.MsgError;
}

<style>
    #btnGravar, #btnCancelar {
        margin-top: 35px;
    }
    .panel-success{
        margin-top: 15px;
    }
    
    label{
        padding-top: 10px;
    }
    input:hover{
        background-color: #F8F8F8;
    }
</style>
<div class="panel-heading">
    <h4 class="panel-title"><i class="fa fa-users"></i>&nbsp;@ViewBag.Title</h4>
</div>

@using (Html.BeginForm("TrocarSenha", "Home", FormMethod.Post, new { @class = "" }))
{
    <div class="container">
        
        <div class="panel panel-success col-md-6 col-md-offset-3">
            <div class="row">
                <div class="col-md-1">&nbsp;</div>
                <div class="col-md-10">
                    <label>Senha atual</label>
                    <input type="password" id="txt_senha_atual" name="txt_senha_atual" class="form-control" required />
                    <label>Nova senha</label>
                    <input type="password" id="txt_senha_nova" name="txt_senha_nova" class="form-control" required />
                    <label>Confirma senha</label>
                    <input type="password" id="txt_conf_senha" name="txt_conf_senha" class="form-control" required />
                    <button type="submit" id="btnGravar" class="btn btn-success"><i class="fa fa-check"></i>&nbsp; Confirmar</button>
                    <a href="/Login" id="btnCancelar" class="btn btn-warning">Cancelar</a>
                    <div>&nbsp;</div>
                </div>
                
            </div>
        </div>
     </div>
}

<script>
    $().ready(function () {
        $("#btn_mnu_principal").hide();
        $("#btn_lista_cliente").hide();
        $("#txt_senha_atual").focus();
        $("#btnGravar").click(function () {
            if ($("#txt_senha_nova").val() != $("#txt_conf_senha").val()) {
                exibirmsgatencao('Atenção, Nova senha e Confirma senha estão diferentes, tente novamente...');
                return false;
            }
        });

    });
</script>
